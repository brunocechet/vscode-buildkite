{
  "name": "buildkite",
  "displayName": "buildkite",
  "description": "Buildkite build statuses inside your editor",
  "version": "0.0.1",
  "publisher": "dannymidnight",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:buildkite-builds"
  ],
  "main": "./out/extension",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "buildkite",
          "title": "Buildkite",
          "icon": "resources/buildkite-mark-on-light-1a26e5b7.svg"
        }
      ]
    },
    "views": {
      "buildkite": [
        {
          "id": "buildkite-orgs",
          "name": "Organizations"
        },
        {
          "id": "buildkite-pipelines",
          "name": "Pipelines"
        },
        {
          "id": "buildkite-builds",
          "name": "Builds"
        }
      ]
    },
    "commands": [
      {
        "command": "buildkite-builds.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "buildkite-builds.refresh",
          "when": "view == buildkite-builds",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "apollo": "^2.1.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "graphql-request": "^1.8.2"
  }
}
